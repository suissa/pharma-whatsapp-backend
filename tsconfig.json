{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "outDir": "dist",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false
  },
  "lib": ["es2015"],
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules/**/*"]
}
