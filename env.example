# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do WhatsApp
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_QR_TIMEOUT=60000
WHATSAPP_RECONNECT_INTERVAL=5000
WHATSAPP_MAX_RECONNECT_ATTEMPTS=3

# Configurações do WebSocket
WEBSOCKET_PORT=8080
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_RECONNECT_BACKOFF_BASE=1000
WEBSOCKET_RECONNECT_BACKOFF_MAX=30000

# Configurações do RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_PREFIX=whatsapp

# Configurações do OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_SERVICE_NAME=pharma-whatsapp
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development

# Configurações de Log
LOG_LEVEL=info
LOG_FORMAT=json

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações do Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_RESET_TIMEOUT=60000 